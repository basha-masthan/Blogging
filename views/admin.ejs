<hr>

<% if (blogs.length === 0) { %>
    <p>No blogs found.</p>
<% } else { %>
    <table border="1" cellpadding="10" style="border-collapse: collapse;">
        <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        <% blogs.forEach(blog => { %>
            <tr>
                <td><%= blog.title %></td>
                <td><%= blog.subtitle %></td>
                <td><%= blog.author %></td>
                <td>
                    <form action="/admin/delete/<%= blog._id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Delete this blog?')">
                            ðŸ—‘ Delete
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
<% } %>
