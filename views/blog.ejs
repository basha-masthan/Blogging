<!DOCTYPE html>
<html>
<head>
  <title><%= blog.title %></title>
  <meta charset="UTF-8">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .blog-content img { max-width: 100%; border-radius: 8px; margin: 2rem 0; }
    .blog-content p { margin-bottom: 1.5rem; line-height: 1.75; }
    .blog-content h2, h3 { margin-top: 2rem; margin-bottom: 1rem; }
  </style>
</head>
<body class="bg-gray-50 min-h-screen text-gray-800">

  <!-- Navbar -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-6xl mx-auto px-6 py-4">
      <a href="/" class="text-2xl font-bold text-gray-900">MyBlog</a>
    </div>
  </nav>

  <!-- Blog Content -->
  <section class="max-w-3xl mx-auto bg-white mt-12 p-12 rounded-xl shadow-sm space-y-8 ">
    <header>
      <h1 class="text-4xl font-bold leading-tight mb-4"><%= blog.title %></h1>
      <p class="text-gray-500 text-sm">
        By <%= blog.author %> • <%= blog.createdAt.toDateString() %>
      </p>
    </header>
<div class="blog-content prose max-w-none">
  <h3 style="color: gray;"><%= blog.subtitle %></h3>
  <%- blog.htmlContent %>
</div>
  </section>

  <!-- Recommendations -->
  <section class="max-w-3xl mx-auto mt-12 space-y-6">
    <h2 class="text-2xl font-semibold">Recommended Blogs</h2>
    <div class="space-y-4">
      <% recommendations.forEach(r => { %>
        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition">
          <a href="/blog/<%= r.slug %>" class="text-lg font-medium hover:text-blue-600">
            <%= r.title %>
          </a>
          <p class="text-sm text-gray-500">
            By <%= r.author %> • <%= r.createdAt.toDateString() %>
          </p>
        </div>
      <% }) %>
    </div>
  </section>

</body>
</html>
